{
  "manifest_version": 2,
  "name": "Browser UI Sounds",
  "version": "0.0.12",
  "browser_specific_settings": {
    "gecko": {
      "id": "andrew@wielding.net"
    }
  },
  "background": {
    "scripts": [
      "background.ts"
    ]
  },
  "browser_action": {
    "default_title": "Browser UI Sounds",
    "default_popup": "options.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "128": "assets/icons/icon_128x128-32.png",
    "96": "assets/icons/icon_96x96-32.png",
    "48": "assets/icons/icon_48x48-32.png",
    "32": "assets/icons/icon_32x32-32.png",
    "16": "assets/icons/icon_16x16-32.png"

  },
  "permissions": [
    "storage",
    "tabs"
  ]
}